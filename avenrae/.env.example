# ============================================
# Avenrae Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# ========== Database ==========
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://avenrae_user:your_secure_password@localhost:5432/avenrae_dev"

# For production, use:
# DATABASE_URL="postgresql://avenrae_user:prod_password@prod-db.com:5432/avenrae_prod"

# ========== Backend (Node.js) ==========
NODE_ENV="development"  # development | production | staging
PORT=3000
API_URL="http://localhost:3000"

# ========== Authentication ==========
# JWT Secret (use a strong random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-use-32-chars-min"
JWT_EXPIRY="24h"
REFRESH_TOKEN_EXPIRY="7d"

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# ========== Frontend ==========
VITE_API_URL="http://localhost:3000"
VITE_ENVIRONMENT="development"

# Nominatim API (OpenStreetMap - free, no key needed)
VITE_NOMINATIM_API="https://nominatim.openstreetmap.org"

# ========== Email Service (Optional) ==========
# For booking confirmations, password resets, etc.
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_NAME="Avenrae"
SMTP_FROM_EMAIL="noreply@avenrae.com"

# ========== Payment Integration (Stripe) ==========
STRIPE_PUBLIC_KEY="pk_test_your_public_key_here"
STRIPE_SECRET_KEY="sk_test_your_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PLATFORM_FEE_PERCENT=15

# ========== File Storage (Optional) ==========
# AWS S3 for avatar uploads, certificates, etc.
AWS_REGION="eu-west-1"
AWS_ACCESS_KEY_ID="your_access_key"
AWS_SECRET_ACCESS_KEY="your_secret_key"
AWS_S3_BUCKET="avenrae-uploads"
AWS_S3_URL="https://avenrae-uploads.s3.amazonaws.com"

# ========== Logging ==========
LOG_LEVEL="info"  # debug | info | warn | error
LOG_FORMAT="json"  # json | text

# ========== CORS ==========
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# ========== Rate Limiting ==========
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========== Monitoring & Analytics (Optional) ==========
SENTRY_DSN="your-sentry-dsn"
MIXPANEL_TOKEN="your-mixpanel-token"

# ========== Feature Flags ==========
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PRACTITIONER_VERIFICATION=true
ENABLE_ONLINE_MEETINGS=true
ENABLE_PAYMENTS=true

# ========== Third-party APIs ==========
GOOGLE_PLACES_API_KEY="optional-for-advanced-address-search"
TWILIO_ACCOUNT_SID="optional-for-sms-notifications"
TWILIO_AUTH_TOKEN="optional-for-sms-notifications"
