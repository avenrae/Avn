# Database Configuration Template
# Copy this file to .env and update with your actual credentials

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=avenrae_db
DB_USER=root
DB_PASSWORD=your_password_here
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00

# Connection Pool
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_ENABLE_KEEP_ALIVE=true

# Database Options
DB_USE_STRICT_MODE=true
DB_AUTO_INCREMENT_INCREMENT=1
DB_SSL_ENABLED=false
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=
DB_SSL_CA_PATH=

# Logging
DB_ENABLE_LOGGING=true
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_TIME=1000

# Backup
DB_AUTO_BACKUP_ENABLED=false
DB_BACKUP_INTERVAL_HOURS=24
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_PATH=/backups/

# Environment
NODE_ENV=development
# NODE_ENV=production
